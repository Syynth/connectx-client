
{ConnectionActionCreators} = require 'connectx/actions'

module.exports =

  acceptRequest: (ev) ->
    ev.preventDefault()
    ev.stopPropagation()

    ConnectionActionCreators.createConnection @props.current, @props

    return false

  deleteConnection: (ev) ->
    ev.preventDefault()
    ev.stopPropagation()

    ConnectionActionCreators.deleteConnection @props.current, @props

    return false

  deleteRequest: (ev) ->
    ev.preventDefault()
    ev.stopPropagation()

    ConnectionActionCreators.deleteConnection @props, @props.current

    return false
