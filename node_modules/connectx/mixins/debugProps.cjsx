React = require 'react'

module.exports =
  printDebugProps: ->
    console.log 'props:'
    console.log @props
    for key, val of @props
      <div>{"@props.#{key}: #{val}"}</div>
  printDebugState: ->
    console.log 'state:'
    console.log @state
    for key, val of @state
      <div>{"@state.#{key}: #{val}"}</div>
  printDebug: ->
    console.group()
    console.log 'printDebug output:'
    res = <div>
      <h2>State</h2>
      <p>{@printDebugState()}</p>
      <h2>Props</h2>
      <p>{@printDebugProps()}</p>
    </div>
    console.groupEnd()
    return res
