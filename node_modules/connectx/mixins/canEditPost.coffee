{CurrentUserStore, PostStore} = require 'connectx/stores'

module.exports =
  canEditPost: ->
    user = CurrentUserStore.getCurrentUser().id
    actor = CurrentUserStore.getCurrentActor().id

    match = (m) => m is @props.owner.id or m is @props.author.id

    match(user) or match(actor)

  canEditComment: ->
    post = PostStore.get @props.postId
    user = CurrentUserStore.getCurrentUser().id
    actor = CurrentUserStore.getCurrentActor().id

    match = (m) => m is @props.author.id or m is post.owner.id

    match(user) or match(actor)
