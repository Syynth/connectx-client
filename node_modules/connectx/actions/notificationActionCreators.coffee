
Dispatcher = require 'connectx/dispatcher'
{ActionType} = require 'connectx/constants'

module.exports =
  postNotification: (raw) ->
    Dispatcher.handleClientAction
      type: ActionType.AddNotification
      message: raw.message
      detail: raw.detail || null
      status: raw.status || 'success'
    alert 'message' # TODO: Implement a message store/view
  removeNotification: (notification) ->
    Dispatcher.handleClientAction
      type: ActionType.RemoveNotification
      key: notification.id
    console.log 'removing' # TODO: Implement message store
