# @cjsx React.DOM

React = require 'react'
{Modal} = require 'react-bootstrap'

RegisterModal = module.exports = React.createClass
  render: ->
    <Modal onRequestHide={@props.onRequestHide} title="Sign up for Golf Connectx">
      <div className="login_form_wrapper">
        <div className="partition">
          <div className="subsection">
            <form className="row1">
              <label>Email *</label>
              <input placeholder="Email" type="email" name="email" />
              <label>Full Name *</label>
              <input placeholder="Full Name" type="text" name="name" />
              <label>Password *</label>
              <input placeholder="Password" type="password" name="password" />
              <label>Confirm Password *</label>
              <input placeholder="Password" type="password" name="password_confirm" />
            </form>
          </div>
        </div>
        <div className="partition center">
          <img className="form_logo" src="img/logo.png" />
          <div className="subsection">
            <p className="button register_btn modal-submit">Create Account</p>
            <p>
              <a className="modal-cancel login member">Already a member?</a>
            </p>
          </div>
        </div>
      </div>
    </Modal>
