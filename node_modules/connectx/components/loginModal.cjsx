# @cjsx React.DOM

React = require 'react'
{Modal, ModalTrigger} = require 'react-bootstrap'
{SessionActionCreators} = require 'connectx/actions'
{Keys} = require 'connectx/config'
RegisterModal = require './registerModal'

LoginModal = module.exports = React.createClass
  tryLogin: (e) ->
    e?.preventDefault()
    SessionActionCreators.tryLogin @refs.email.getDOMNode().value, @refs.password.getDOMNode().value
    @refs.modal.props.onRequestHide()
  filterKeys: (e) ->
    if e.keyCode is Keys.Enter
      e.preventDefault()
      @tryLogin()
  render: ->
    <Modal onRequestHide={@props.onRequestHide} title="Welcome to Golf Connectx" ref="modal">
      <div className="login_form_wrapper">
        <div className="partition">
          <div className="subsection">
            <form className="row1">
              <label>Email</label>
              <input placeholder="Email" type="email" name="email" ref="email" />
              <label>Password</label>
              <input placeholder="Password" type="password" name="password" ref="password" onKeyDown={@filterKeys} />
              <p><a className="forgot_password recover">Forgot password?</a></p>
              <button className="green justfull login_btn modal-submit" onClick={@tryLogin}>Login</button>
              {
                unless @props.nested
                  <ModalTrigger modal={<RegisterModal nested="true" />}>
                    <p><a className="register">Not a member?</a></p>
                  </ModalTrigger>
                else
                  <p onClick={@props.onRequestHide}><a className="register">Not a member?</a></p>
              }

            </form>
          </div>
        </div>
        <div className="partition center">
          <img className="form_logo" src="img/logo.png" />
        </div>
      </div>
    </Modal>
