# @cjsx React.DOM

React = require 'react'
{Link, RouteHandler} = require 'react-router'

Bullitin = module.exports = React.createClass
  getInitialState: -> {shown: true}
  toggleBody: ->
    @setState shown: !@state.shown
  render: ->
    <div className="bullitin_wrapper">
      <div className="bullitin one-edge-shadow">
        <div className="header one-edge-shadow">
          <div className="icon partition" />
          <div className="name partition">{@props.title}</div>
          <div className="hideShow partition" onClick={@toggleBody}>
            {
              if @state.shown
                <i className="fa fa-minus" />
              else
                <i className="fa fa-plus" />
            }

            <div className="clearfix" />
          </div>
          <div className="clearfix" />
        </div>
        {
          if @state.shown
            <div className="body" ref="body">
              {@props.children}
              <div className="clearfix" />
            </div>
        }
      </div>
    </div>
