
React = require 'react'
_ = require 'lodash'

{NotificationActionCreators, ConnectionActionCreators} = require 'connectx/actions'

module.exports = React.createClass
  connectEntities: ->
    NotificationActionCreators.postNotification message: "Sending request from #{@props.current.name} to #{@props.entity.name}"
  render: ->
    style =
      position: 'absolute'
      right: '1%'
      bottom: '2%'
    <button style={_.extend style, @props.style}
            onClick={@connectEntities}
            className="button connect_btn red addFriend">
      Add friend
    </button>
