Events/subpages.cjsx
###

React = require 'react'
{Link} = require 'react-router'
TwoColumn = require 'connectx/components/twoColumn'
ThreeColumn = require 'connectx/components/threeColumn'
Bullitin = require 'connectx/components/bullitin'
AboutDisplay = require 'connectx/components/aboutDisplay'
FileViewer = require 'connectx/components/fileViewer'
{CurrentUserStore} = require 'connectx/stores'
{
  EventList,
  UserList,
  CourseList,
  GroupList
} = require 'connectx/components/entity'
Gallery = require 'connectx/components/gallery'
subs = require '../subTemplates.cjsx'

getProps = (props, title = "") ->
  title: title
  data:
    current: CurrentUserStore.getCurrentActor()
    entity: props.entity
    admin: false
    type: 'strong'

Attending = React.createClass
  render: ->
    props = getProps @props
    <TwoColumn>
      <Bullitin title="Attending #{props.entity.name}">
        <UserList {...props.data} />
      </Bullitin>
    </TwoColumn>

Invite = React.createClass
  render: ->
    props = getProps @props
    <TwoColumn>
      <Bullitin title="Invite your friends to #{props.entity.name}">
        <UserList {...props.data} />
      </Bullitin>
    </TwoColumn>

Main = React.createClass
  render: ->
    props = getProps @props
    <ThreeColumn {...props}>
      <Bullitin title="About #{props.entity.name}"><AboutDisplay {...props} /></Bullitin>
      <Bullitin title="#{props.entity.name}'s Members"><EventList {...props} /></Bullitin>
    </ThreeColumn>

Times = React.createClass
  render: ->
    props = getProps @props, "Tee times for #{@props.entity.name}"
    <subs.Files {...props} />

Results = React.createClass
  render: ->
    props = getProps @props, "Results for #{@props.entity.name}"
    <subs.Files {...props} />

Photos = React.createClass
  render: ->
    props = getProps @props, "#{@props.entity.name}'s Photos"
    <subs.Photos {...props} />

Settings = React.createClass
  render: ->
    props = getProps @props
    <TwoColumn>
      <Bullitin title="#{props.entity.name}'s Settings"><Gallery {...props} /></Bullitin>
    </TwoColumn>

module.exports = { Attending, Invite, Main, Times, Results, Photos, Settings }
