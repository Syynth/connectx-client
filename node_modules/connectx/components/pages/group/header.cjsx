SearchForm = require 'connectx/components/searchForm'
Announcement = require 'connectx/components/announcement'
GroupNav = require './nav'

module.exports = React.createClass
  render: ->
    <div className='group header_wrapper'>
      <section className='header_entity'>
        <span>{@props.entity.name}</span>
      </section>
      <section className='sub_entity'>
        <Announcement entity={@props.entity} />
