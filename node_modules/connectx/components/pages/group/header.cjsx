          <figure className='cover-fig'>
            <img className='cover-img' src='img/assets/header_cover.png' />
          </figure>
        </section>
        <div className='entity_nav_wrapper shadow'>
          <div className='nav_split partition'>
            <GroupNav entity={@props.entity} />
