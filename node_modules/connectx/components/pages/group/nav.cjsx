
# @cjsx React.DOM

React = require 'react'
{Link, State} = require 'react-router'
Icon = require 'connectx/components/icon'

module.exports = React.createClass
  mixins: [State]
  render: ->
    <article className="nav_menu">
      <Link to="clubhouse" className="img">
        <figure>
          <img src="img/icons/golf_nav.png" />
        </figure>
      </Link>
      <Link to="group" params={@getParams()}><Icon fa-user /> Profile</Link>
      <Link to="group.about" params={@getParams()}>About</Link>
      <Link to="group.times" params={@getParams()}>Tee Times</Link>
      <Link to="group.friends" params={@getParams()}>Members</Link>
      <Link to="group.results" params={@getParams()}>Results</Link>
      <Link to="group.photos" params={@getParams()}>Photos</Link>
      {
        if @props.admin
          <Link to="group.settings" params={@getParams()}>Settings</Link>
      }
    </article>
