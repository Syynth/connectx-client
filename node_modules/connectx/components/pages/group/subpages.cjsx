React = require 'react'
{Link} = require 'react-router'
TwoColumn = require 'connectx/components/twoColumn'
ThreeColumn = require 'connectx/components/threeColumn'
Bullitin = require 'connectx/components/bullitin'
AboutDisplay = require 'connectx/components/aboutDisplay'
FileViewer = require 'connectx/components/fileViewer'
{CurrentUserStore} = require 'connectx/stores'
{
  GroupList,
  UserList,
  CourseList,
  EventList
} = require 'connectx/components/entity'
Gallery = require 'connectx/components/gallery'
Inbox = require 'connectx/components/inbox'

getProps = (props) ->
  current: CurrentUserStore.getCurrentActor()
  entity: props.entity
  admin: false
  type: 'strong'

About = React.createClass
  render: ->
    props = getProps @props
    <TwoColumn>
      <Bullitin title="About #{props.entity.name}">
        <AboutDisplay {...props} />
      </Bullitin>
    </TwoColumn>

Friends = React.createClass
  render: ->
    props = getProps @props
    <TwoColumn>
      <Bullitin title="#{props.entity.name}'s Members">
        <UserList {...props} />
      </Bullitin>
    </TwoColumn>

Main = React.createClass
  render: ->
    props = getProps @props
    <ThreeColumn {...props}>
      <Bullitin title="About #{props.entity.name}"><AboutDisplay {...props} /></Bullitin>
      <Bullitin title="#{props.entity.name}'s Members"><GroupList {...props} /></Bullitin>
    </ThreeColumn>

Messages = React.createClass
  render: ->
    props = getProps @props
    <TwoColumn>
      <Bullitin title="#{props.entity.name}'s Messages">
        <Inbox {...props} />
      </Bullitin>
    </TwoColumn>

Times = React.createClass
  render: ->
    props = getProps @props
    <TwoColumn>
      <Bullitin title="Tee times for #{props.entity.name}"><FileViewer {...props} /></Bullitin>
    </TwoColumn>

Results = React.createClass
  render: ->
    props = getProps @props
    <TwoColumn>
      <Bullitin title="Results for #{props.entity.name}"><FileViewer {...props} /></Bullitin>
    </TwoColumn>

Photos = React.createClass
  render: ->
    props = getProps @props
    <TwoColumn>
      <Bullitin title="#{props.entity.name}'s Photos"><Gallery {...props} /></Bullitin>
    </TwoColumn>

Settings = React.createClass
  render: ->
    props = getProps @props
    <TwoColumn>
      <Bullitin title="#{props.entity.name}'s Settings"><Gallery {...props} /></Bullitin>
    </TwoColumn>

module.exports = { About, Friends, Main, Times, Results, Photos, Settings }
