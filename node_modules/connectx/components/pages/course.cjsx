# @cjsx React.DOM

React = require 'react'
Header = require '../header'
Footer = require '../footer'
Main = require '../main'
{Link, RouteHandler, State} = require 'react-router'
{EntityActionCreators} = require 'connectx/actions'
{CurrentUserStore, CourseStore} = require 'connectx/stores'
{AutoStoreListener, VerifyRoutes} = require 'connectx/mixins'
SearchForm = require 'connectx/components/search/form'
CourseHeader = require './course/header'

module.exports = React.createClass
  mixins: [State, AutoStoreListener CourseStore]
  statics:
    willTransitionTo: (transition, params) ->
      new VerifyRoutes(transition, params)
        .isLoggedIn()
        .isEntityViewable params.id, 'course'
  render: ->
    entity = CourseStore.getOrDefault @getParams().id
    <div className="body_wrapper">
      <Header><CourseHeader entity={entity} /></Header>
      <Main>
        <RouteHandler current={CurrentUserStore.getCurrentActor()} entity={entity} />
      </Main>
      <Footer />
    </div>
