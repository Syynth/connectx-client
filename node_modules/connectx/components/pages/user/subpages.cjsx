React = require 'react'
{Link} = require 'react-router'
TwoColumn = require 'connectx/components/twoColumn'
ThreeColumn = require 'connectx/components/threeColumn'
Bullitin = require 'connectx/components/bullitin'
AboutDisplay = require 'connectx/components/aboutDisplay'
{CurrentUserStore} = require 'connectx/stores'
{
  GroupList,
  UserList,
  CourseList,
  EventList
} = require 'connectx/components/entity'
Gallery = require 'connectx/components/gallery'

getProps = (props) ->
  current: CurrentUserStore.getCurrentActor() # current is the one to be acting as
  entity: props.entity
  admin: false
  type: 'strong'

About = React.createClass
  render: ->
    props = getProps @props
    <TwoColumn>
      <Bullitin title="About #{props.current.name}">
        <AboutDisplay {...props} />
      </Bullitin>
    </TwoColumn>

Courses = React.createClass
  render: ->
    props = getProps @props
    <TwoColumn>
      <Bullitin title="#{props.entity.name}'s Courses">
        <CourseList {...props} />
      </Bullitin>
    </TwoColumn>

Friends = React.createClass
  render: ->
    props = getProps @props
    <TwoColumn>
      <Bullitin title="#{props.entity.name}'s Friends">
        <UserList {...props} />
      </Bullitin>
    </TwoColumn>

Groups = React.createClass
  render: ->
    props = getProps @props
    <TwoColumn>
      <Bullitin title="#{props.entity.name}'s Groups">
        <GroupList {...props} />
      </Bullitin>
    </TwoColumn>

Events = React.createClass
  render: ->
    props = getProps @props
    <TwoColumn>
      <Bullitin title="#{props.entity.name}'s Events">
        <EventList {...props} />
      </Bullitin>
    </TwoColumn>

Main = React.createClass
  render: ->
    props = getProps @props
    <ThreeColumn {...props}>
      <Bullitin title="#{props.entity.name}'s Groups"><GroupList {...props} /></Bullitin>
      <Bullitin title="#{props.entity.name}'s Events"><EventList {...props} /></Bullitin>
      <Bullitin title="#{props.entity.name}'s Courses"><CourseList {...props} /></Bullitin>
    </ThreeColumn>

Photos = React.createClass
  render: ->
    props = getProps @props
    <TwoColumn>
      <Bullitin title="#{props.entity.name}'s Photos"><Gallery {...props} /></Bullitin>
    </TwoColumn>

module.exports = { About, Friends, Courses, Groups, Events, Main, Photos }
