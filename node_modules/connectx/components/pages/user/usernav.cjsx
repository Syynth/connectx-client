# @cjsx React.DOM

React = require 'react'
{Link} = require 'react-router'
Icon = require 'connectx/components/icon'

UserNav = module.exports = React.createClass
  getInitialState: -> spin: false
  startSpinning: -> @setState spin: true
  stopSpinning: -> @setState spin: false
  render: ->
    <article className="nav_menu">
      <Link to="clubhouse" className="img">
        <figure>
          <img src="img/icons/golf_nav.png" />
        </figure>
      </Link>
      <Link to="friends">Friends</Link>
      <Link to="groups">Groups</Link>
      <Link to="courses">Courses</Link>
      <Link to="about">About</Link>
      <Link to="photos">Photos</Link>
      <Link to="settings" onMouseEnter={@startSpinning} onMouseLeave={@stopSpinning}>
        <Icon fa-cog fa-spin={@state.spin} />
      </Link>
    </article>
