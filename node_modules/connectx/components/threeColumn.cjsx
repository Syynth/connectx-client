# @cjsx React.DOM

React = require 'react'
PostColumn = require './postColumn'

ThreeColumn = module.exports = React.createClass
  render: ->
    <div className="content_region_wood">
      <div className="left_triple partition">{@props.children}</div>
      <div className="center_triple partition"><PostColumn current={@props.current} entity={@props.entity} /></div>
      <div className="partition right_triple">
        <div className="ads">
          <img className="blog" src="img/blog-ad.png" />
          <img className="mobile" src="img/mobile-ad.png" />
          <img className="orange" src="img/orange-ad.png" />
          <img className="blue" src="img/turquoise-ad.png" />
        </div>
      </div>
    </div>
