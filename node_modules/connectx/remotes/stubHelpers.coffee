guid = require 'guid'

module.exports =
  getRandomError: (failureRate = 0.5) ->
    if Math.random() < failureRate
      {message: 'Stub!'}
    else
      null
  getNetworkDelay: (offset, variability)->
    (500 + offset) + Math.random() * (300 + variability)
  getServerId: -> "ServerId#{guid.create().value}"
