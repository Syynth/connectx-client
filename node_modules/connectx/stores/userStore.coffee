_ = require 'lodash'
{EventEmitter} = require 'events'

{SourceType, ActionType} = require 'connectx/config'
Dispatcher = require 'connectx/dispatcher'
Cache = require 'connectx/cache'

BaseStore = require './baseStore'

recordEntity = (action) ->
  return if action.entity.type isnt 'user'
  id = action.entity.id
  @set id, action.entity

class UserStore extends BaseStore
  storeKey: 'USER_STORE'
  schema:
    id: String
    description: String
    email: String
    images: [String]
    name: String
    password: String
    salt: String
    token: String
    verificationId: String
    location:
      address: String
      city: String
      state: String
      zip: String
      note: String
  constructor: (dispatcher) ->
    super dispatcher
    p = new Cache @read 'cache'
  set: (key, val) -> super key, @ensureFields val
  getById: (id) -> @get id
  getOrDefault: (id) -> @getByIdOrDefault id
  getByIdOrDefault: (id) ->
    res = @get id
    unless res
      return @defaultInstance()
    res
  onStorageFull: -> @clearAll()
  handlers: [
    action: ActionType.UserLogin
    fn: recordEntity
  ,
    action: ActionType.EntityFetch
    fn: recordEntity
  ]

module.exports = new UserStore Dispatcher
