_ = require 'lodash'
{EventEmitter} = require 'events'

{SourceType, ActionType} = require 'connectx/config'
Dispatcher = require 'connectx/dispatcher'
Cache = require 'connectx/cache'

BaseStore = require './baseStore'

recordEntity = (action) ->
  return if action.entity.type isnt 'course'
  recordCourse.call @, action.entity

recordCourse = (course) -> @set course.id, @ensureFields course

class CourseStore extends BaseStore
  storeKey: 'COURSE_STORE'
  schema:
    id: String
    type: 'course'
    name: String
    basic: Boolean
    description: String
    connections: [Object]
    images: [String]
    announcement:
      title: String
      body: String
    location:
      address: String
      city: String
      state: String
      zip: Number
      note: String
    profileImage: String
    coverImage: String
  set: (key, val) -> super key, @ensureFields val
  getOrDefault: (id) ->
    res = @get(id) || {id: id}
    @ensureFields res
  onStorageFull: -> @clearAll()
  handlers: [
    action: ActionType.UserLogout
    fn: BaseStore::wipeCache
  ,
    action: ActionType.EntitySearch
    fn: (action) ->
      if action.entityType is 'course'
        action.entities.map (e) =>
          recordCourse.call @, e
  ]

module.exports = new CourseStore Dispatcher
