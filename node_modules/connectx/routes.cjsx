# @cjsx React.DOM

###

###

React = require 'react'

{
  Route,
  RouteHandler,
  DefaultRoute
} = require 'react-router'

{
  App,
  pages: {
    Home,
    Clubhouse,
    CSubs
  }
} = require 'connectx/components'

module.exports =
  <Route handler={App}>
    <DefaultRoute handler={Home} />
    <Route name="home" handler={Home} />
    <Route name="clubhouse" handler={Clubhouse}>
      <DefaultRoute handler={CSubs.Main} />
      <Route name="clubhouse.friends"  path="friends"  handler={CSubs.Friends} />
      <Route name="clubhouse.groups"   path="groups"   handler={CSubs.Groups} />
      <Route name="clubhouse.events"   path="events"   handler={CSubs.Events} />
      <Route name="clubhouse.courses"  path="courses"  handler={CSubs.Courses} />
      <Route name="clubhouse.about"    path="about"    handler={CSubs.About} />
      <Route name="clubhouse.photos"   path="photos"   handler={CSubs.Photos} />
      <Route name="clubhouse.settings" path="settings" handler={CSubs.Settings} />
      <Route name="clubhouse.messages" path="messages" handler={CSubs.Messages} />
    </Route>
    <Route name="user" path="user/:id" handler={Clubhouse}>
      <DefaultRoute handler={CSubs.Main} />
      <Route path="friends" name="user.friends" handler={CSubs.Friends} />
    </Route>

  </Route>
